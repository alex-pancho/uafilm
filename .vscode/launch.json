    "version": "0.2.0",
    "configurations": [
    {
      "name": "Scrapy: Run Spider",
      "type": "python",
      "request": "launch",
      "program": "${workspaceFolder}/venv/Scripts/scrapy.exe", 
      "args": [
        "crawl",
        "uakinobest"        // <-- replace with your spider name
      ],
      "cwd": "${workspaceFolder}/uakino/uakinobest",
      "console": "integratedTerminal",
      "justMyCode": false
    },
    {
      "name": "Debug Scrapy Spider",
      "type": "python",
      "request": "launch",
      "module": "scrapy",
      "args": ["crawl", "ashdi"],
      "cwd": "${workspaceFolder}/ashdi",
      "console": "integratedTerminal",
      "justMyCode": false
    }
    ]
}